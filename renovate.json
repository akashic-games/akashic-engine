{
  "extends": [
    "config:base"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": ["every weekend"],
  "labels": ["dependencies"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "separateMinorPatch": true,
  "packageRules": [
    {
      "packagePatterns": ["^@akashic/"],
      "groupName": "all dependencies (akashic)"
    },
    {
      "matchUpdateTypes": ["minor"],
      "groupName": "all dependencies"
    },
    {
      "matchUpdateTypes": ["patch"],
      "groupName": "all dependencies"
    },
    {
      "matchPackageNames": ["xorshift"],
      "enabled": false
    }
  ]
}
