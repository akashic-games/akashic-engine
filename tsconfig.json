{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5"],
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "lib",
    "sourceMap": false,
    "types": ["console"],
    "typeRoots": [
      "node_modules/@types",
      "./typings"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/__tests__/**/*.ts"
  ]
}