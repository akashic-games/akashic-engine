{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["ES2021"],
    "strict": true,
    "declaration": true,
    "outDir": "lib",
    "sourceMap": true,
    "useUnknownInCatchVariables": false,
    "noImplicitOverride": true,
    "types": ["console"],
    "typeRoots": [
      "node_modules/@types",
      "./typings"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/__tests__/**/*.ts"
  ]
}